<div class="page-background">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 center-page-innen">
        <div class="login-card card-shadow-light">

          <div class="card-head">
            <h2>Log in</h2>
          </div>

          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="form-group row">
                <div class="input-group-prepend">
                  <i class="fas fa-at input-group-text"></i>
                </div>
                <%= f.text_field :email,
                  class:"form-controll",
                  placeholder: 'Email',
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }
                %>
              </div>

              <div class="form-group row">
                <div class="input-group-prepend">
                  <i class="fas fa-unlock-alt input-group-text"></i>
                </div>
                <%= f.password_field :password,
                  required: false,
                  class:"form-controll",
                  placeholder: 'Password',
                  input_html: { autocomplete: "current-password" }
                %>
              </div>

              <div class="form-group row">
                <div class="input-group-prepend">
                  <div class="input-group-text">
                    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>
                </div>
                <p class="form-controll form-hide-border" >Remember me!</p>
              </div>

              <div class="form-actions">
                <%= f.submit "Log in", class:"btn btn-medium-solid" %>
              </div>
            <% end %>
          </div>

          <div class="card-foot">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
