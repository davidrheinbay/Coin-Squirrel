<div class="container">
  <h1><%= current_user.balance_cents %> V Bucks</h1>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-6">
        <div class="store-card">
          <%= image_tag "#{item.image}", alt: "alttext", class: 'store-image' %>
          <div class="store-image">
            <p><%= item.name %></p>
            <p><%= item.rarity %></p>
            <p>cost: <%= item.cost %> V-Bucks</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




