<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-4">
        <p><%= item.name %></p>
        <p><%= item.rarity %></p>
        <%= image_tag "#{item.image}", alt: "alttext", class: 'store-image' %>
        <p>cost: <%= item.cost %> V-Bucks</p>
      </div>
    <% end %>
  </div>
</div>




