
<% if first %>
  <div class="recent_payout_details card-shadow-light button-detail-pair-<%= transaction.id %>">
<% else %>
  <div class="recent_payout_details card-shadow-light button-detail-pair-<%= transaction.id %> hidden">
<% end %>
  <% if transaction.state == 'completed' %>
    <span class="status green"><%= transaction.state %></span>
  <p>You have used your code already.</p>
  <p>Make another payout to get another one.</p>
  <% else %>
    <span class="status yellow"><%= transaction.state %></span>
    <p>Click below to reveal your code</p>
  <% end %>


  <div class="full-code">
    <button type= "button" class="copy-code tooltip-wrapper" title="copy">
      <span class="copyable">
        <span class="full-code-copy"><strong><%= transaction.game_code %></strong></span>
        <i class="far fa-copy"></i>
      </span>
      <span class="my-tooltip-wrapper"><span class="tooltip-hover my-tooltip hidden">Copy Code</span></span>
      <span class="my-tooltip-wrapper"><span class="tooltip-click my-tooltip hidden">Copied!</span></span>
    </button>
  </div>

  <a href="#">
    <button class="btn-medium-light code">Show code</button>
  </a>

</div>
