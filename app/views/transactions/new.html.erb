<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="login-card card-shadow-light">

        <div class="card-head">
          <h2>Payout your Coins</h2>
        </div>

        <div class="card-body">
          <% amount =  current_user.balance * current_user.game.exchange_rates.where(currency_origin_short: "EUR").first.rate %>
          <p> Max. Payout: <%= number_with_precision(amount, precision: 0, delimiter: ',') %></p>

          <%= form_for(@transaction) do |f| %>

           <div class="form-group row">
              <div class="input-group-prepend">
                <i class="fas fa-coins input-group-text"></i>
              </div>
              <%= f.text_field :user_commission_amount_cents,
                class:"form-controll",
                placeholder: 'Amount Coins',
                required: true
              %>
            </div>


              <%= f.hidden_field :transaction_type, value: 'cash_out',
                required: true
              %>


            <div class="form-actions">
              <%= f.submit "Log in", class:"btn btn-medium-solid" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


