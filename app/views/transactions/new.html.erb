<div class="page-background" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url('<%= cl_image_path current_user.game.banner_image %>')" >

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 center-page-innen">
        <div class="login-card card-shadow-strong">

          <div class="card-head">
            <h2>Payout your Coins</h2>
          </div>

          <div class="card-body">
            <% amount =  current_user.balance * current_user.game.exchange_rates.where(currency_origin_short: "EUR").first.rate %>
            <p> Max. Payout: <%= number_with_precision(amount, precision: 0, delimiter: ',') %></p>

            <%= form_for(@transaction) do |f| %>

             <div class="form-group row">
                <div class="input-group-prepend">
                  <i class="fas fa-coins input-group-text"></i>
                </div>
                <%= f.text_field :user_commission_amount_cents,
                  class:"form-controll",
                  placeholder: 'Amount Coins',
                  value: nil,
                  required: true
                %>
              </div>


                <%= f.hidden_field :transaction_type, value: 'cash_out',
                  required: true
                %>


              <div class="form-actions">
                <%= f.submit "Get Payout", class:"btn btn-medium-solid" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
